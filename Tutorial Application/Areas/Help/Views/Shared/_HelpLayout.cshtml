@{ // inherit from common layout
    Layout = "_Layout";
    // produce method to make active nav string
    string ActiveNav(string controller)
    {
        string currentController = ViewContext.RouteData.Values["controller"].ToString(); // compare "controller".ToString to string passed in parameter
        return (controller == currentController) ? "active" : "";
    }



    // override the common layout header

}

@section header{
    <h2>Help Page</h2>
}
<nav class="nav nav-tabs mt-4 mb-4">
    <a class="nav-item nav-link @ActiveNav("Home")" asp-controller="Home" asp-action="Index" asp-area="Help">Home</a>
    <a class="nav-item nav-link @ActiveNav("Tutorial")" asp-controller="Tutorial" asp-action="Index" asp-route-id="Page1">Tutorial</a>

</nav>

@RenderBody()
